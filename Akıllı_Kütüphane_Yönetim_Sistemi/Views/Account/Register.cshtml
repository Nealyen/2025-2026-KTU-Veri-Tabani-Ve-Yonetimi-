@model Akıllı_Kütüphane_Yönetim_Sistemi.db_vs_sinif.Kullanici
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title text-center">Kayıt Ol</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-warning">@ViewBag.Message</div>
                    }

                    <form asp-action="Register" method="post">
                        <div class="mb-3">
                            <label class="form-label">Adınız</label>
                            <input asp-for="Ad" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Soyadınız</label>
                            <input asp-for="Soyad" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">E-Mail Adresiniz</label>
                            <input asp-for="Email" type="email" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Şifre Belirleyin</label>
                            <input asp-for="Sifre" type="password" class="form-control" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Kayıt Ol</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small>Zaten hesabın var mı? <a asp-action="Login">Giriş Yap</a></small>
                </div>
            </div>
        </div>
    </div>
</div>